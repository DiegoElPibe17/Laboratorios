Num1= input("Inserte una medida en Metro\n")
Num1=(int(Num1))
millas=(Num1*1000)/1.69
km= Num1*1000
Ft= Num1*3.28
In= Ft/12

print("Resultado\n")
print("Millas:",millas)
print("Pies:",Ft)
print("Pulgadas", In)
print("Kilometros",km)
Num2=input("Inserte otra medida en metros\n")
Num2=(int(Num2))

yardas= Num2*1.094
ft=Num2*3.28
In=ft/12
print("Resultado\n")
