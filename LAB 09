try:
    N= int(input("Ingrese un numero\n"))
    if (N==0):
        print("Numero no valido")
    else:
        if(N%2==0):
            print("Numero par")
        else:
            print("Numero impar")
except ValueError:
    print("Porfavor ingrese un numero valido")
    print("Ejercicio 1: operaciones")
Num1=input ("Insertar un numero:\n")
Num2=input ("Insertar segundo numero:\n")
Num1=int(Num1)
Num2=int(Num2)

Res1=Num1+Num2
print(Num1,"+",Num2,"=", Res1)

Res2=Num1-Num2
print(Num1,"-",Num2,"=", Res2)

Res3=Num1*Num2
print(Num1,"*",Num2,"=", Res3)

Res4=Num1/Num2
print(Num1,"/",Num2,"=", Res4)

Res5=Num1%Num2
print(Num1,"%",Num2, "=",Res5)

Res6=Num1//Num2
print(f"(Num1) / (Num2) ={Res6}")


print("Ejercicio 2: operaciones Boleanas")
Num3=bool("Insertar un numero:\n")
Num4=bool("Insertar segundo numero:\n")
Num3=str(Num3)
Num4=str(Num4)

Res1=Num3>Num4
print(Num3,">",Num4,"=", Res1)

Res2=Num3<Num4
print(Num3,"<",Num4,"=", Res2)

Res3=Num3==Num4
print(Num3,"==",Num4,"=", Res3)

Res4=Num3!=Num4
print(Num3,"!=",Num4, "=",Res4)


a=input("Insertar un numero\n")
