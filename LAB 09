a=(int(a))
b=(int(b))
c=(int(c))

a1=(a*b)+c
print(a,"*",b,"+",c,"=", a1)
a2=a*(b+c)
print(a,"*",b,"+",c,"=", a2)
a3=a/b+c
print(a,"/",b,"+",c,"=", a3)
a4=3*a+2*b/c**2
print(3,"",a,"+",2,"",b,"/",c,"=", a4)
